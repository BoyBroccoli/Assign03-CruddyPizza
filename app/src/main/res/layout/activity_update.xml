<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/addCustomerName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Enter Customer Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/addCustomerAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Enter Address"
            android:inputType="phone"
            />

        <EditText
            android:id="@+id/addCustomerNumber2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Enter Phone Number"
            android:inputType="text"
            />


        <!--        Drop Down for Pizza Size-->
        <Spinner
            android:id="@+id/pizzaSize2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Select Pizza Size"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/toppingOne2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Select Topping One"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/toppingTwo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Select Topping Two"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/toppingThree2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:hint="Select Topping Three"
            android:spinnerMode="dropdown" />


        <Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6CECE"
            android:backgroundTint="#C8C0C0"
            android:text="Update"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C1B5B5"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#ED2F2F" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>